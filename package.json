{
  "name": "mwp",
  "private": true,
  "workspaces": ["packages/@kd-mwp/*"],
  "devDependencies": {
    "lerna": "^4.0.0"
  },
  "scripts": {
    "build-config": "lerna run build --scope @kd-mwp/mwp-config",
    "build-util": "lerna run build --scope @kd-mwp/mwp-util",
    "start-util": "lerna exec --scope @kd-mwp/util npm start",
    "start-config": "lerna exec --scope @kd-mwp/config npm start",
    "build": "concurrently \"npm run build-config\""
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "micro",
    "util",
    "lerna"
  ]
}
